using System.IO;

如果需要从DLL导入的话
//dll部分
/* balabalabala各种代码块 */
Directory.CreateDirectory("文件夹名称");
            StreamWriter Title = new StreamWriter("文件夹名称/文件名称");
            Title.Write(写入的变量);
            Title.Close();
//主体部分
